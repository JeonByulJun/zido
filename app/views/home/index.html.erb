// This example displays a marker at the center of Australia.
// When the user clicks the marker, an info window opens.
var mapCanvas = document.getElementById('map');


function initMap() {
    
    mcOptions = {styles: [{
                    height: 45,
                    url: "c1.jpg",
                    width: 45
                },
                {
                    height: 55,
                    url: "c2.jpg",
                    width: 55
                },
                {
                    height: 65,
                    url: "c3.jpg",
                    width: 65
                },
