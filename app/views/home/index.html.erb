        <% end %>
        var contentString = '<div id="infobox">'+
                            '<div class="title"><h1>MY TRIP</h1></div>'+
                            '<%=form_tag '/make', method:'post', enctype:'multipart/form-data' do %><div class="form-group"><label for="comment">Title:</label><textarea name="tit" class="form-control" row="1"></textarea></div><div class="form-group"><label for="comment">Content:</label><textarea name="con" class="form-control" row="4"></textarea></div>'+
                            '<div class="container">'+
